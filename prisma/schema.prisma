datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String
  tokens    Int      @default(0) // Tokens for user
  isTrusted Boolean  @default(false) // Trusted user status
  profiles  Profile[]
}

model Profile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  type        String   // athlete, coach, media, parent, fan, organization
  gradYear    Int?     // For athletes
  team        String?  // For coaches
  outlet      String?  // For media
  affiliation String?  // For organizations
  stats       Stat[]
  placeholder Boolean  @default(false) // For coach-entered new players
}

model Stat {
  id          Int      @id @default(autoincrement())
  profileId   Int
  profile     Profile  @relation(fields: [profileId], references: [id])
  sport       String
  gameDate    DateTime
  opponent    String
  season      String
  metrics     Json     // Custom stat data
  mediaLink   String?
  verified    Boolean  @default(false)
  verifiedBy  String?  // coach, media, admin, AI
  createdBy   String   // athlete, coach
  submissionCount Int  @default(0) // Track submissions for trusted status
}

